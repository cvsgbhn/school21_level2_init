# broadcast is ip with last octet == 255
echo "\nall characteristics: "
ifconfig en0
echo "\nbroadcast: "
ifconfig en0 | awk 'NR==5' | awk '{print $6}'
# Address Resolution Protocol which can be used to find out about every device on the local network
echo "\nips in the same subnet: "
arp -a | awk '{print $2}'
